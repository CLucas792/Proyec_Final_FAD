@page "/EnvioMuestras"
@using Modelos;

<AuthorizeView Roles="Administrador">
    <Authorized Context="AuthenticationState">
        <h2>Lista de Examenes por enviar</h2>

        @if (lista == null)
        {
            <p>No existen examenes pendientes en el sistema</p>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                    <tr class="table-dark">
                        <th>IdExamen</th>
                        <th>IdentidadCliente</th>
                        <th>NumMuestra</th>
                        <th>TipoExamen</th>
                        <th>FechaTomaMuestra</th>
                        <th>Estado</th>
                        <th>Pagado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Examen examen in lista)
                    {
                        <tr>
                            <td>@examen.IdExamen</td>
                            <td>@examen.IdentidadCliente</td>
                            <td>@examen.NumMuestra</td>
                            <td>@examen.TipoExamen</td>
                            <td>@examen.FechaTomaMuestra</td>
                            <td>@examen.Estado</td>
                            <td>@examen.Pagado</td>

                            <th>
                                <a class="btn btn-outline-primary" href="@($"/EnvioMuestras2/{examen.IdExamen}")">Editar</a>
                            </th>
                        </tr>
                    }
                </tbody>

            </table>
        }
    </Authorized>
    <NotAuthorized>
        <h3>No tiene permisos para acceder a esta ruta</h3>
    </NotAuthorized>
</AuthorizeView>
